<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoodsExpiryDateTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/persian_orange_200</item>
        <item name="colorSecondaryVariant">@color/persian_orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <!--        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/primary_500</item>
        <!--        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogStyle">@style/DialogTheme</item>

    </style>


    <!-- ******************************************************************************** Head -->
    <style name="head" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/primary_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ******************************************************************************** Paragraph -->
    <style name="paragraph" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">.7</item>
    </style>

    <!-- ******************************************************************************** Paragraph hint -->
    <style name="hint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/persian_orange_700</item>
        <item name="android:alpha">.7</item>
    </style>

    <!-- ******************************************************************************** Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/_15sdp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- ********************************************************************** roundedImageView -->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_25sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_25sdp</item>
    </style>


</resources>